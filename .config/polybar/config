[colors]
foreground = #D4D7D9
red = #9E534E

[bar/bar]
monitor = eDP-1
bottom = false

width = 86%
height = 26
offset-x = 7%
offset-y = 5

fixed-center = true

background = #090406
foreground = ${colors.foreground}

module-margin-left = 1
module-margin-right = 1

font-0 = Misc Termsynu:style=Regular:pixelsize=10;2
font-1 = FontAwesome:pixelsize=10;3

modules-left = bspwm
modules-center = title
modules-right = battery date
;modules-right = temperature eth wlan backlight-acpi battery alsa

cursor-click = pointer
cursor-scroll = ns-resize

wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

format = <label-state>
label-monitor = %name%

label-focused = %name%
label-focused-background = #407076
label-focused-foreground = ${colors.foreground}
label-focused-padding = 2

label-occupied = %name%
abel-occupied-foreground = ${colors.foreground}
label-occupied-padding = 2

label-empty = %name%
label-empty-foreground = #2d2d2d
label-empty-padding = 2

[module/title]
type = internal/xwindow

format = <label>
format-foreground = ${colors.foreground}
format-padding = 2

label-maxlen = 50

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 1.0

format-connected = <label-connected>

label-connected = "%{F#9E534E}%{F-} %local_ip%"
label-connected-foreground = ${colors.foreground}

[module/eth]
type = internal/network
interface = enp0s25
interval = 1.0

format-connected = <label-connected>

label-connected = "%{F#9E534E}%{F-} %local_ip%"
label-connected-foreground = ${colors.foreground}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/xbacklight]
type = internal/xbacklight

format = <label>
format-foreground = ${colors.foreground}
label = "%{F#9E534E}%{F-} %percentage%%"

[module/alsa]
type = internal/alsa

master-soundcard = default
master-mixer = Master
mapped = true

interval = 1

format-volume = <ramp-volume> <label-volume>

label-volume =  "%percentage%%"
label-volume-foreground = ${colors.foreground}

label-muted = "Mute"
label-muted-foreground = ${colors.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

ramp-volume-foreground = ${colors.red}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging><label-charging>
format-discharging = <ramp-capacity><label-discharging>
format-full = <ramp-capacity><label-full>

label-discharging-foreground = #D4D7D9
label-full-foreground = #D4D7D9
label-charging-foreground = #D4D7D9

ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "
ramp-capacity-foreground = ${colors.red}

animation-charging-0 = " "
animation-charging-1 = " "
animation-charging-2 = " "
animation-charging-3 = " "
animation-charging-4 = " "
animation-charging-framerate = 350
animation-charging-foreground = ${colors.red}

[module/temperature]
type = custom/script
interval = 1
exec = sensors | awk '/Core/ {print substr ($3, 2, 2) " C"}' | tr '\n' ' '

format-prefix = "%{F#9E534E}%{F-} "
format-foreground = #D4D7D9

[module/date]
type = custom/script
interval = 1.0

format-background = ${colors.red}
format-foreground = ${colors.foreground}
format-padding = 1

exec = date +'%A, %b %d %H:%M'

; vim:ft=dosini
