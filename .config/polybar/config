; Polybar config
; Made by: Marcelo Alves
; Intelectual propriety does not exist. Enjoy it.

; Global Settings
;
; margin-top = 10

; Colors
;

[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color7}

primary = ${xrdb:color1}
secondary = ${xrdb:color6}
alert = ${xrdb:color3

; Bar
;
[bar/bar]
monitor = eDP-1
;bottom = true

width = 90%
height = 30
offset-x = 5%
offset-y = 10

fixed-center = true

background = ${colors.background}
foregronud = ${colors.foreground}

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Roboto Mono:style=Bold:pixelsize=8;2
font-1 = FontAwesome:pixelsize=10;3

modules-left = bspwm
modules-center = date
modules-right = temperature eth wlan backlight-acpi battery alsa

cursor-click = pointer
cursor-scroll = ns-resize

wm-restack = bspwm

; Modules
;

; Bspwm
;
[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-foreground = ${colors.secondary}
label-focused-padding = 2

label-occupied = %name%
label-occupied-foreground = ${colors.foreground-alt}
label-occupied-padding = 2

label-urgent = %name%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.primary}
label-empty-padding = 2

; Wireless
;
[module/wlan]
type = internal/network
interface = wlp3s0
interval = 1.0

format-connected = <label-connected>

label-connected = " %local_ip%  "
label-connected-foreground = ${colors.foreground-alt}

; Ethernet
;
[module/eth]
type = internal/network
interface = enp2s0
interval = 1.0

format-connected = <label-connected>

label-connected = " %local_ip%  "
label-connected-foreground = ${colors.foreground-alt}

; Backlight-acpi
;
[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

; Xbacklight
;
[module/xbacklight]
type = internal/xbacklight

format = <label>
format-foreground = ${colors.foreground-alt}
label = " %percentage%%  "

; ALSA
;
[module/alsa]
type = internal/alsa

master-soundcard = default
master-mixer = Master
mapped = true

interval = 1

format-volume = <ramp-volume> <label-volume>

label-volume =  "%percentage%%"
label-volume-foreground = ${colors.foreground-alt}

label-muted = "Mute"
label-muted-foreground = ${colors.secondary}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

ramp-volume-foreground = ${colors.foreground-alt}
; Battery
;
[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging><label-charging>
format-discharging = <ramp-capacity><label-discharging>

label-discharging = "%percentage%%  "
label-full = " %percentage%%  "
label-charging = "%percentage%%  "
label-discharging-foreground = ${colors.foreground-alt}
label-full-foreground = ${colors.foreground-alt}
label-charging-foreground = ${colors.foreground-alt}

ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = " "
animation-charging-1 = " "
animation-charging-2 = " "
animation-charging-3 = " "
animation-charging-4 = " "
animation-charging-framerate = 350
animation-charging-foreground = ${colors.foreground-alt}

; CPU
;
[module/cpu]
type = internal/cpu
interval = 0.5

format = <label> <bar-load>

label = "CPU"
label-foreground = ${colors.foreground-alt}

bar-load-indicator =
bar-load-width = 15
bar-load-foreground-0 = ${colors.secondary}
bar-load-foreground-1 = ${colors.secondary}
bar-load-foreground-2 = ${colors.secondary}
bar-load-foreground-3 = ${colors.secondary}
bar-load-fill = 
bar-load-empty = 
bar-load-empty-foreground = ${colors.primary}


; Memory
;
[module/memory]
type = internal/memory
interval = 2

format = <label> <bar-used>

label = "RAM"
label-foreground = ${colors.foreground-alt}

bar-used-indicator =
bar-used-width = 15
bar-used-foreground-0 = ${colors.secondary}
bar-used-foreground-1 = ${colors.secondary}
bar-used-foreground-2 = ${colors.secondary}
bar-used-foreground-3 = ${colors.secondary}
bar-used-fill = 
bar-used-empty = 
bar-used-empty-foreground = ${colors.primary}


; Custom modules
;

; Temperature
;
[module/temperature]
type = custom/script
interval = 1.5
exec = sensors | awk '/Core/ {print substr($3, 2, 2) " C"}' | tr '\n' ' '

format-prefix = " "
format-foreground = ${colors.foreground-alt}

; CPU MHz
;
[module/speed]
type = custom/script
interval = 1
exec = lscpu | awk '/CPU MHz/ {printf substr ($3,1,length($3)-4)}' | sed 's/$/ MHz/'

format-foreground = ${colors.foreground-alt}
format-suffix = "  "

;Date
;
[module/date]
type = custom/script
interval = 1.0

format-foreground = ${colors.foreground-alt}

exec = echo "[  $(date +'%A, %b %d %H:%M')  ]"

; Gentoo
;
[module/gentoo]
type = custom/script
format-prefix = " "
format-foreground = ${colors.foreground-alt}
exec = uname -r






; vim:ft=dosini
