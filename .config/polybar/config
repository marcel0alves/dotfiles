[colors]
;background = #282a36
background = #212121
;foreground = #e2e4e5
foreground = #eeffff

red = #9E534E

[bar/bar]
#monitor = eDP-1
bottom = false
width = 80%
height = 30
offset-x = 10%
;offset-y = 5
dpi-x = 120
dpi-y = 120
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 1
module-margin-left = 2
module-margin-right = 2

font-0 = mononoki:style=Bold:pixelsize=8;3
font-1 = FontAwesome:pixelsize=10;2

modules-left = bspwm
modules-center = title
modules-right = temperature wlan eth battery date

cursor-click = pointer
cursor-scroll = ns-resize

wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

format = <label-state>
label-monitor = %name%

label-focused = 
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1

label-occupied = 
label-occupied-foreground = #78787e
label-occupied-padding = 1

label-urgent = 
label-urgent-foreground = ${colors.red}
label-urgent-padding =1

label-empty = 
label-empty-foreground = #78787e
label-empty-padding = 1

[module/title]
type = internal/xwindow

format = <label>
format-foreground = ${colors.foreground}
format-padding = 2

label-maxlen = 60

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 1.0

format-connected = <label-connected>

label-connected = "%{F#57c7ff}%{F-} %essid%"
label-connected-foreground = ${colors.foreground}

[module/eth]
type = internal/network
interface = enp0s25
interval = 1.0

format-connected = <label-connected>

label-connected = "%{F#9E534E}%{F-} %local_ip%"
label-connected-foreground = ${colors.foreground}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/xbacklight]
type = internal/xbacklight

format = <label>
format-foreground = ${colors.foreground}
label = "%{F#9E534E}%{F-} %percentage%%"

[module/alsa]
type = internal/alsa

;master-soundcard = default
;master-mixer = Master
;mapped = true

interval = 1

format-volume = <label-volume>

label-volume =  "%{F#6E891B}%{F-} %percentage%%"
label-volume-foreground = ${colors.foreground}

label-muted = " Mute"
label-muted-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = %{F#9E534E}%{F-} <label-charging>
format-full = %{F#5af78e}%{F-} Full
format-discharging = <ramp-capacity><label-discharging>

ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "

ramp-capacity-foreground = ${colors.red}
label-discharging-foreground = ${colors.foreground}
label-full-foreground = ${colors.foreground}
label-charging-foreground = ${colors.foreground}

[module/temperature]
type = custom/script
interval = 1
exec = sensors | awk '/Package id/ {print $4}' | sed 's/+//'

format-prefix = "%{F#ff5c57}%{F-} "
format-foreground = ${colors.foreground}

[module/date]
type = custom/script
interval = 1.0

format-background = ${colors.red}
format-foreground = ${colors.foreground}
format-padding = 1

exec = date +'%b %d %H:%M'

; vim:ft=dosini
