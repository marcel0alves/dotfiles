[colors]
background = #090406
foreground = #D4D7D9

red = #9E534E

[bar/bar]
monitor = eDP1
bottom = true
width = 100%
height = 24

fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

module-margin-left = 2
module-margin-right = 2

font-0 = scientifica:pixelsize=8;2
font-1 = FontAwesome:pixelsize=10;3

modules-left = bspwm
modules-center = title
modules-right = temperature wlan battery date

cursor-click = pointer
cursor-scroll = ns-resize

wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

format = <label-state>
label-monitor = %name%

label-focused = %name%
label-focused-background = ${colors.red}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 2

label-occupied = %name%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 2

label-empty = %name%
label-empty-foreground = #272D14
label-empty-padding = 2

[module/title]
type = internal/xwindow

format = <label>
format-foreground = ${colors.foreground}
format-padding = 2

label-maxlen = 60

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 1.0

format-connected = <label-connected>

label-connected = "%{F#9E534E}%{F-} %essid%"
label-connected-foreground = ${colors.foreground}

[module/eth]
type = internal/network
interface = enp0s25
interval = 1.0

format-connected = <label-connected>

label-connected = "%{F#9E534E}%{F-} %local_ip%"
label-connected-foreground = ${colors.foreground}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/xbacklight]
type = internal/xbacklight

format = <label>
format-foreground = ${colors.foreground}
label = "%{F#9E534E}%{F-} %percentage%%"

[module/alsa]
type = internal/alsa

;master-soundcard = default
;master-mixer = Master
;mapped = true

interval = 1

format-volume = <label-volume>

label-volume =  "%{F#6E891B}%{F-} %percentage%%"
label-volume-foreground = ${colors.foreground}

label-muted = " Mute"
label-muted-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = %{F#9E534E}%{F-} <label-charging>
format-full = %{F#9E534E}%{F-} Full
format-discharging = <ramp-capacity><label-discharging>

ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "

ramp-capacity-foreground = ${colors.red}
label-discharging-foreground = ${colors.foreground}
label-full-foreground = ${colors.foreground}
label-charging-foreground = ${colors.foreground}

[module/temperature]
type = custom/script
interval = 1
exec = sensors | awk '/Package id/ {print $4}' | sed 's/+//'

format-prefix = "%{F#9E534E}%{F-} "
format-foreground = ${colors.foreground}

[module/date]
type = custom/script
interval = 1.0

format-background = ${colors.red}
format-foreground = ${colors.foreground}
format-padding = 1

exec = date +'%b %d %H:%M'

; vim:ft=dosini
